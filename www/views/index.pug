extends layout

block head
  script(src='/js/userAuth.js')
  script(src='/sha3/sha3.js')
  link(rel='stylesheet', href='/stylesheets/index.css')

block content
  .container
    form.form-signin#formSignIn
      h2.form-signin-heading Please Sign In
      .alert.alert-danger.collapse#alertDanger(role='alert')
      label.sr-only(for='inputUsername') Username
      input.form-control#inputUsername(placeholder='Username', required, autofocus)

      label.sr-only(for='inputPassword') Password
      input.form-control#inputPassword(type='password', placeholder='Password', required)

      button.btn.btn-lg.btn-primary.btn-block#submitButton(type='submit') Sign In
